*{/*전체 선택자: 모든 태그의 속성 지정*/
	color:brown;
}

h1{/* 태그 선택자: 해당 태그에 속성 지정*/
	background-color: #d1a3a3; /*배경색 설정*/
	text-align: center; /*가운데 정렬*/
	/*text-transform: Lowercase; /*모두 소문자로 변경*/
	text-transform: uppercase; /*모두 대문자로 변경*/
}

ul{
	list-style-type: square;
}
ul li a { /* 계층 선택자: ul태그 아래의 li태그 아래의  a태그에 적용*/
	color:orange;
	text-decoration: none; /*밑줄 없음*/
	/*text-decoration:overline; /*위에 줄*/
}

ul li a:hover { /*상태 선택자 : hover는 마우스가 올라간 상태*/
	text-decoration:underline; /*밑에 줄*/
	color: tomato;
}

h3{
	color: black;
}

img{
	border-radius: 30px; /* 테두리 둥글게*/
}

img:hover{
	border-radius: 30px; /* 테두리 둥글게*/
}

.abc{
	border: 1px solid gray;
	background-color: #c9b6b6;
	line-height:1.7em;/*줄간격*/
	border-radius:10px;/*테두리 모서리 둥글게*/
	text-indent: 10px;/*양수는 들여쓰기, 음수는 내어쓰기*/
}
