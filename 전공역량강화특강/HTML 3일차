	font: italic 95% arial;
}

a, a:hover{/*상태선택자(a:hover는 a태그에 마우스 올라간 상태)*/
	outline: none;
	text-decoration: underline;/*밑줄*/
	color: #808080;
}

a:hover{
	text-decoration: none;/*밑줄 없음*/
}

ul{
	margin: 2px 0 0 17px;
}

